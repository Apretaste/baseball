<div class="row">
    <div class="col">
        <div class="card horizontal">
			<div class="card-image">
				<img src="{{APP_SERVICE_PATH}}/images/MLB_TEAM_<%= team.abbreviation %>.png">
			</div>
			<div class="card-stacked">
				<div class="card-content">
                    <span style="color: white; background: #<%= team.color %>;padding:5px;float:right;"><%= team.abbreviation %></span>
						<%= team.displayName %>
					<p>
                        <i class="material-icons" style="color:#<%= team.color %>; border: 1px solid #eee;">label</i>
                        <i class="material-icons" style="color:#<%= team.alternateColor %>; border: 1px solid #eee;">label</i>
					</p>
				</div>
			</div>
		</div>
    </div>
</div>


<div class="row">
    <div class="col">
        <h2>Eventos</h2>
        <% for (var i = 0; i < team.nextEvent.length; i++) { var event = team.nextEvent[i]; %>
            <%= event.name %>
            <p><%=event.seasontType.name %> <%= event.season.displayName %></p>
            <p><%=event.seasontType.date %></p>

            <% for(var j =0; j<  event.competitions.length; j++) { %>
                <% var competition = event.competitions[j]; %>
                <div class="card horizontal">
                    <div class="card-stacked">
                        <div class="card-image">
                        </div>
                        <div class="card-content">
                            <div class="row" >
                                <div class="col s6 l6 xl6 m6" style="text-align: center;">
                                    <a href="#" onclick ="apretaste.send({command: 'BASEBALL MLBTEAM', data: {query: '<%= competition.competitors[0].team.id %>'}});">
                                        <img style="height:10rem;" class="responsive-img" src="{{APP_SERVICE_PATH}}/images/MLB_TEAM_<%= event.competitions[0].competitors[0].team.abbreviation %>.png">
                                    </a>
                                    <span id="versus">VS</span>
                                </div>
                                <div class="col s6 l6 xl6 m6" style="text-align: center;">
                                    <a href="#"  onclick ="apretaste.send({command: 'BASEBALL MLBTEAM', data: {query: '<%= competition.competitors[1].team.id %>'}});">
                                        <img style="height:10rem;" class="responsive-img" src="{{APP_SERVICE_PATH}}/images/MLB_TEAM_<%= event.competitions[0].competitors[1].team.abbreviation %>.png">
                                    </a>
                                </div>
                            </div>
                             <h3 align="center"><%= event.shortName %></h3>
                             <p align="center"><%= event.name %></p>
                             <p align="center"><%= competition.date %></p>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }%>
    </div>
</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({command: 'BASEBALL MLBTEAMS', data: {query: ''}});">
        <i class="material-icons">arrow_back</i>
    </a>
</div>
