    <div class="row">
      <div class="col s12 l12 m12 x12">
        <h2>L&iacute;deres de la MLB</h2>
      </div>
    </div>
    <% for(var i=0; i < leagueStats.length; i++) {
        var tableStat = leagueStats[i];
        if(tableStat) { %>
        <div class="row">
          <div class="col s12 l12 m12 x12">
            <table width="100%" border="0">
				<% for (var j=0; j < tableStat.length; j++) { var tr = tableStat[j]; %>
              <tr>
                <% for(var k=0; k < tr.length; k++) {
                  var td = tr[k];
                  if (k==0) { %>
                    <th align="left">
                      <strong>
                        <%= td %>
                      </strong>
                    </th>
                    <% } else { %>
                      <td>
                        <%= td %>
                      </td>
                    <% } %>
                  <% } %>
              </tr><% } %></table>
          </div>
        </div>
        <% } %>
          <% } %>
