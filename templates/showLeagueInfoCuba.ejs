<% for(var x=0; x < ligas.length; x++) { var liga = ligas[x]; %>
  <div class="row">
    <div class="col s12 l12 m12 x12">
      <h2><%= liga.titulo %></h2>
    </div>
  </div>
  <% for(var i = 0; i < liga.etapas.length; i++) { var etapa = liga.etapas[i]; %>
  <% if (!etapa) continue; %>
    <div class="row">
      <div class="col s12 l12 m12 x12">
        <table id ="datatable" class="display compact" width="100%">
          <thead>
            <tr>
              <td colspan="13">
                <div class="row">
                  <div class="col s12 l12 m12 x12">
                    <h3 style="margin:0;">
                      <%= etapa.tituloEtapa %>
                    </h3>
                  </div>
                </div>
              </td>
            </tr>
          </thead>
          <% var nfila = 0; %>
          <% for(var j=0; j < etapa.tablaEtapa.length; j++) { var fila = etapa.tablaEtapa[j]; %>
            <tbody>
            <tr>
              <% var ncol = 0 %>
              <% for(var k=0; k < fila.length; k++) { var columna = fila[k]; %>
                <% if (columna.length > 2 && ncol == 0) { %>
                  <% nfila = 0 %>
                <% } %>
                <% if (nfila==0 && ncol==0) { %>
                  <td font-size="2" colspan="2">
                    <strong><%= columna %></strong>
                  </td>
                <% } else if(nfila == 0) { %>
                  <td font-size="2">
                    <strong><%= columna %></strong>
                  </td>
                <% } else { %>
                  <td font-size="2">
                    <%= columna %>
                  </td>
                <% } %>
                <% ncol++; %>
              <% } %>
              <% nfila++; %>
            </tr>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>
<% } %>

