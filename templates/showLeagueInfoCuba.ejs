<% for(var x=0; x < ligas.length; x++) { var liga = ligas[x]; %>
  <div class="row">
    <div class="col s12 l12 m12 x12">
      <h2><%= liga.titulo %></h2>
    </div>
  </div>
  <% for(var i = 0; i < liga.etapas.length; i++) { var etapa = liga.etapas[i]; %>
  <% if (!etapa) continue; %>
  <div class="row" style="padding-bottom: 0px; margin-bottom: 0px;">
      <div class="col s12 l12 m12 x12" style="padding: 0px; margin-bottom: 0px;">
        <p style="margin:0px; padding: 5px; width:100%;text-align: center; background: #eeeeee;font-size: 2rem;" onclick="$('#etapa-<%= x %>-<%= i %>').toggleClass('hide');" ><%= etapa.tituloEtapa %></p>
      </div>
  </div>
    <div class="row">
      <div class="col s12 l12 m12 x12" style="overflow: auto;padding: 0px;">

        <table id = "etapa-<%= x %>-<%= i %>" class="display compact striped" width="100%" style="background: #C0EABD;">
          <% for(var j=0; j < etapa.tablaEtapa.length; j++) { var fila = etapa.tablaEtapa[j]; %>
           <% if(j == 0) { %>
            <thead>
              <tr>
                <% for(var k=0; k < fila.length; k++) { var columna = fila[k]; %>

                  <% if(k == 0) { %>
                    <td></td>
                  <% } %>

                  <td font-size="2">
                    <strong><%= columna %></strong>
                  </td>
                  <% if (k == 5 && false) { %>
                    </tr><tr><td></td><td></td>
                  <% } %>
                <% } %>
              </tr>
              </thead>
          <% } else { %>
            <% if(j == 1) { %> <tbody> <% } %>
            <tr>
              <% for(var k=0; k < fila.length; k++) { var columna = fila[k]; %>

              <% if(k == 0 && etapa.tablaEtapa[1].length > fila.length
                      && etapa.tablaEtapa[0].length == fila.length) { %>
                <td></td>
                <td font-size="2">
                  <strong><%= columna %></strong>
                </td>
                </tr>
                <% break; %>
              <% } %>

              <td font-size="2">
                <%= columna %>
              </td>

              <% if (k == 6 && false) { %>
                </tr><tr><td></td><td></td>
              <% } %>
              <% } %>
            </tr>
          <% } %>
         <% } %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>
<% } %>

